{% extends 'form.html.twig' %}

{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}

{% block form_contents %}
	{{ element.description }}
	{{ element.confirm }}
	{{ element.form_build_id }}
	{{ element.form_token }}
	{{ element.form_id }}

	<div data-drupal-selector="{{ element.actions['#attributes']['data-drupal-selector'] }}" id="{{ element.actions['#id'] }}" class="form-actions js-form-wrapper form-group d-md-flex align-items-md-center mt-4">
		{{ element.actions.submit }}

		<a class="btn btn-secondary" id="{{ element.actions.cancel['#id'] }}" href="{{ element.actions.cancel['#url'] }}">{{ element.actions.cancel['#title'] }}</a>
	</div>
{% endblock %}

